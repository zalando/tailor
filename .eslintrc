{
    "env": {
        "browser": false,
        "es6": true,
        "node": true
    },
    "plugins": [
        "prettier"
    ],
    "rules": {
        "curly": 2,
        "no-underscore-dangle": 0,
        "no-constant-condition": 2,
        "no-dupe-args": 2,
        "no-debugger": 2,
        "no-duplicate-case": 2,
        "no-empty": 2,
        "no-empty-character-class": 2,
        "no-eval": 2,
        "no-unused-vars": 2,
        "no-lonely-if": 2,
        "quotes": [2, "single"],
        "strict": [2, "global"],
        "prettier/prettier": [2, {
            "singleQuote": true,
            "tabWidth": 4
        }]
    },
    "globals": {
        "require": false,
        "module": false
    }
}
